// Body fix
body, html
  background #fafafa
  display block
  width 100%
  height 100%

// ---
// Chart
// ---
.chart
  margin 40px auto
  display block

  text
    font-size 10px
    font-family 'Helvetica'
    color #666
    font-weight 100

  circle
    fill #135DB8

    &.red
      fill #135DB8

    &.blue
      fill #CD0016

  .axis
    path,
    line
      fill none
      stroke #999
      shape-rendering crispEdges

// ---
// Canvas fix
// ---
canvas
  width 100px
  height 100px
  image-rendering pixelated

// ---
// Drawing pane
// ---
.pane
  margin 80px auto
  position relative

.original-images,
.history
  width 960px
  margin 0 auto
  margin-bottom 30px

canvas
  margin 10px